# command=$HOME/.scripts/battery.sh
# interval=1

[separator]

[Date]
label= 
command=date '+%Y %b %d'
interval=1

[separator]

[Time]
label= 
command=date '+%I:%M %p'
interval=1
color=#BD9191

[separator]

[Lang]
command=$HOME/.scripts/get_language.sh
interval=once
signal=12
